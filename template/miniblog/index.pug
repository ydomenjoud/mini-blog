extends layout

block content
   each post in pages_list
      article.post
         .post-content
            header
               h1.title
                  a(href=post.url)=post.title
            .entry
               p #{post.description}
               a.more(href=post.url) see more
            footer
               if post.author
                  a(rel="author", href="")=post.author
               | &nbsp;/&nbsp;
               time(datetime=page.publish.timestamp)=page.publish.formatted
            .clearfix